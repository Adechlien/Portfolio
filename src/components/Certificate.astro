---
const {certificateURL, certificateName, certificateProvider, certificateSpan} = Astro.props;
---

<a class=`certificate text-center bg-[#333343] px-4 py-2 rounded ${certificateSpan}` href=`/images/certificado-${certificateURL}.pdf` target="_blank" rel="noopener">
    <i class=`ti ti-certificate text-3xl`></i>
    <h3 class="text-[#87cefa] text-lg">{certificateName}</h3>
    <p class="text-[#388ec4]">{certificateProvider}</p>
</a>